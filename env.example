# ============================================
# ClipCraft AI - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# AI Services
# ============================================

# Anthropic Claude API (required for prompt parsing)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI API (optional - for Whisper transcription)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Replicate API (optional - for additional AI models)
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# Storage
# ============================================

# Vercel Blob Storage (for video file uploads)
BLOB_READ_WRITE_TOKEN=vercel_blob_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Upstash Redis (for job queue and caching)
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# Authentication (optional)
# ============================================

# NextAuth.js configuration
NEXTAUTH_SECRET=your-super-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# App Configuration
# ============================================

# Maximum file upload size in bytes (default: 2GB)
MAX_UPLOAD_SIZE=2147483648

# Processing timeout in seconds (default: 300)
PROCESSING_TIMEOUT=300

# Base URL (for webhooks and callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

